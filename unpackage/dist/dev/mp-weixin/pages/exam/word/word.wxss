.voice-wrapper {
  margin: 32px auto 32px auto;
  text-align: center;
  vertical-align: middle;
}
.voice-wrapper .voice {
  width: 240rpx;
  height: 240rpx;
}
.voice-wrapper .underline-input {
  margin: 50rpx 50rpx 0 50rpx;
  height: 64px;
  line-height: 64px;
  font-size: 20px;
  border-bottom: 1px solid #ddd;
}
.btn-wrapper {
  margin: 50rpx;
}
.btn-wrapper .tui-btn-box {
  margin-bottom: 26rpx;
}
.answer-wrapper {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  text-align: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.answer-wrapper text {
  display: inline-block;
  font-size: 48rpx;
  margin-left: 32rpx;
}

