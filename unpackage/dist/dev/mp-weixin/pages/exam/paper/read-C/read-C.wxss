.page-container {
  padding: 50rpx;
}
.header {
  line-height: 1.8;
}
.btn-box {
  padding: 30rpx;
}
.btn-box:first-child {
  margin-top: 50rpx;
}
.d-container {
  width: 400rpx;
  padding: 48rpx 30rpx;
}
.d-container .tree {
  margin-bottom: 64rpx;
}
.main .voice-container {
  margin: 32px auto 32px auto;
  text-align: center;
  vertical-align: middle;
}
.main .voice-container .voice {
  width: 240rpx;
  height: 240rpx;
}
.main .blank-container .blank-item-container {
  padding: 25rpx;
  background: #f0f0f0;
  margin-bottom: 32rpx;
}
.main .blank-container .blank-item {
  margin: 20rpx 0;
  line-height: 1.8;
}
.main .blank-answer-container .option {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 24rpx;
}
.main .blank-answer-container .option input {
  border-bottom: 1px solid #ddd;
  margin-left: auto;
  width: 100%;
  text-align: center;
}
.main .blank-options-container {
  background: #f0f0f0;
  padding: 25rpx;
  margin-top: 32rpx;
}
.main .blank-options-container .option {
  line-height: 1.8;
  border-bottom: 1rpx solid #bbb;
  margin-bottom: 12rpx;
  padding-bottom: 12rpx;
}

