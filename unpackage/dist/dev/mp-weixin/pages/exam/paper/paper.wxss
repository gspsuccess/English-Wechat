.page-container {
  padding: 50rpx;
}
.cover-container .cover-title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
}
.cover-container .userinfo {
  background: #f0f0f0;
  padding: 25rpx;
  margin: 36rpx 0;
}
.cover-container .userinfo .userinfo-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 36rpx 0;
}
.cover-container .userinfo .userinfo-item input {
  border-bottom: 1rpx solid #bbb;
}
.cover-container .notice {
  margin: 32rpx 0;
}
.cover-container .notice .notice-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 36rpx;
}
.cover-container .notice .notice-item-container .notice-item {
  margin-bottom: 32rpx;
}
.cover-container .notice .notice-item-container .notice-item .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}
.cover-container .notice .notice-item-container .notice-item .options .option {
  line-height: 1.8;
  margin-bottom: 24rpx;
}

